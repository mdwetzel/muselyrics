<div class="row">
	<div class="col-md-5">
		<h1><%= @album.title %> <small><%= @album.year %></small></h1>
		<%= image_tag @album.image.thumb_4, class: 'album-photo' %>
	</div>
	<div class="col-md-7 songs">
		<h2>Songs</h2>

		<% if @songs.any? %>
		<ul>
		<% @songs.each do |song| %>
			<li><%= song.track %> - <%= link_to song.title, [song.album, song] %></li>
		<% end %>
		</ul>
		<% else %>
		<p>No songs yet.</p>
		<% end %>

		<% if can? :create, Song %>
		<p>Song missing? <%= link_to "Add a new song", new_album_song_path(@album) %></p>
		<% end %>
	</div>
</div>

<div class="row">
	<div class="col-md-4">
		<% if can? :manage, @album %>
		<div class="well admin-box">
			<fieldset>

			<legend>Admin</legend>
			<ul>
				<li><%= link_to 'Edit', edit_album_path(@album) %></li>
				<li><%= link_to "Destroy", @album, method: :delete, data: { confirm: "Are you sure?" } %></li>
			</ul>
			</fieldset>
		</div>
		<% end %>
	</div>
</div>