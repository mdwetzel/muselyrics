<div class="row">
	<div class="col-md-12">
		<div class="well">
			<div id="profile">
				<h2><%= @user.username %> <small><%= user_status(@user) %></h2>

				<%= image_tag @user.avatar %>

				<p id="join-date">Muser since <%= @user.created_at.strftime("%D") %></p>

				<% if @user.latest_comments.any? %>
					<h3>Latest activity <small><%= user_participation(@user) %></small></h3>

					<% @user.latest_comments.each do |comment| %>
					<article>
						<%= link_to comment.song.title, [comment.song.album, comment.song] %>
						<span class="glyphicon glyphicon-chevron-right"></span>
						<%= truncate(comment.body) do %>
							<%= link_to "(read more)",  [comment.song.album, comment.song,
								anchor: "#{comment.id}"] %> 
						<% end %>
						<small><%= time_ago_in_words(comment.created_at) %> ago</small>

		 			</article>
					<% end %>
				<% end %>
			</div>
		</div>
	</div>	
</div>