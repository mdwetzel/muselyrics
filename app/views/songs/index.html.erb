<div class="col-md-12">
  <% if @songs.any? %>
  <h1><%= "Found #{pluralize(@songs.count, 'result')}" %></h1>
  <ul>
    <% @songs.each do |song| %>
      <li><%= link_to song.title, [song.album, song] %></li>
    <% end %>
  </ul>
  <% else %>
    <p class="text-center">No songs found!</p>
  <% end %>
</div>