<p id="notice"><%= notice %></p>

<h1>Listing Songs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Lyrics</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.title %></td>
        <td><%= song.lyrics %></td>
        <td><%= song.description %></td>
        <td><%= link_to 'Show', [song.album, song] %></td>
        <td><%= link_to 'Edit', edit_album_song_path(song.album, song) %></td>
        <td><%= link_to 'Destroy', [song.album, song], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

